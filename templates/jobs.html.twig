{% extends 'base.html.twig' %}


{% block body %}
    <div class="row text-center">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <p><h4>THESE ARE THE JOBS IN THE QUEUE AT THE MOMENT: </h4></p>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Url</th>
                    <th scope="col">Status</th>
                    <th scope="col">Http Code</th>
                </tr>
                </thead>
                <tbody>
                {% if jobs is defined and jobs|length > 0 %}
                    {% for job in jobs %}
                        <tr>
                            <th scope="row">{{ job.id }}</th>
                            <td>{{ job.url }}</td>
                            <td>{{ job.status }}</td>
                            <td>{{ job.httpCode }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}